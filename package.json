{
  "name": "prompt-language-shell",
  "version": "0.8.2",
  "description": "Your personal command-line concierge. Ask politely, and it gets things done.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pls": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "typecheck": "tsc --project tsconfig.eslint.json",
    "build": "npm run typecheck && npm run clean && tsc && chmod +x dist/index.js && mkdir -p dist/skills && cp src/skills/*.md dist/skills/",
    "dev": "npm run build && tsc --watch",
    "prepare": "husky",
    "prepublishOnly": "npm run check",
    "test": "vitest run --exclude 'tests/integration/*.test.tsx'",
    "test:watch": "vitest --exclude 'tests/integration/*.test.tsx'",
    "test:llm": "vitest run tests/integration/schedule*.test.tsx",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "format:check": "prettier --check '**/*.{ts,tsx}'",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "check": "npm run build && npm run test && npm run lint && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aswitalski/pls.git"
  },
  "keywords": [
    "command line interface",
    "developer tools",
    "interactive shell",
    "natural language processing",
    "personal concierge",
    "prompt language",
    "task execution",
    "workflow automation"
  ],
  "author": "Sensei Aleksander Åšwitalski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aswitalski/pls/issues"
  },
  "homepage": "https://github.com/aswitalski/pls#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  }
}
