{
  "name": "prompt-language-shell",
  "version": "0.3.6",
  "description": "Your personal command-line concierge. Ask politely, and it gets things done.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pls": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "typecheck": "tsc --project tsconfig.eslint.json",
    "build": "npm run typecheck && npm run clean && tsc && chmod +x dist/index.js && mkdir -p dist/config && cp src/config/*.md dist/config/",
    "dev": "npm run build && tsc --watch",
    "prepare": "husky",
    "prepublishOnly": "npm run check",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "format:check": "prettier --check '**/*.{ts,tsx}'",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "check": "npm run build && npm run test && npm run lint && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aswitalski/pls.git"
  },
  "keywords": [
    "command line interface",
    "developer tools",
    "interactive shell",
    "natural language processing",
    "personal concierge",
    "prompt language",
    "task execution",
    "workflow automation"
  ],
  "author": "Sensei Aleksander Åšwitalski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aswitalski/pls/issues"
  },
  "homepage": "https://github.com/aswitalski/pls#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "ink": "^6.4.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^19.2.2",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^4.0.5"
  }
}
