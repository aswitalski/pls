{
  "name": "prompt-language-shell",
  "version": "0.0.5",
  "description": "Your personal command-line concierge. Ask politely, and it gets things done.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pls": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js && mkdir -p dist/config && cp src/config/SYSTEM.md dist/config/",
    "dev": "npm run build && tsc --watch",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aswitalski/pls.git"
  },
  "keywords": [
    "shell",
    "natural",
    "language",
    "command line",
    "assistant",
    "concierge"
  ],
  "author": "Sensei Aleksander Åšwitalski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aswitalski/pls/issues"
  },
  "homepage": "https://github.com/aswitalski/pls#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "ink": "^6.4.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^19.2.2",
    "eslint": "^9.17.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^4.0.5"
  }
}
